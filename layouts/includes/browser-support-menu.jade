aside.sidebar
    .sidebar__content
        .mobile-docs-header
            button.mobile-docs-toggle Docs Menu
        nav.sidebar__list
            h2.sidebar__section-title Getting Started
            - var pages = [{title:"Step 1: Install PhoneGap", url:"getting-started/1-install-phonegap/desktop"},{title:"Step 2: Install Mobile App", url:"getting-started/2-install-mobile-app"},{title:"Step 3: Create Your App", url:"getting-started/3-create-your-app/desktop"},{title:"Step 4: Preview Your App", url:"getting-started/4-preview-your-app/desktop"},{title:"Step 5: Going Further", url:"getting-started/5-going-further"}]
            ul
                each page in pages
                    li: a(href="/#{page.url}" class=document.url === page.url? "current" : "")!=page.title
            h2.sidebar__section-title Tutorials
            h3.sidebar__section-subtitle Developer Guides
            ul
                li: a(href="/develop/hello-world-explained" class=document.url === 'develop/hello-world-explained'? "current" : "") Hello World Explained
                li: a(href="/develop/1-embed-webview/ios" class=document.url === 'develop/1-embed-webview/ios'? "current" : "") Embedding the Webview
                li: a(href="/develop/push-notifications" class=document.url === 'develop/push-notifications'? "current" : "") Push Notifications
            h2.sidebar__section-title References
            ul
                li: a(href="/references/phonegap-cli" class=document.url === 'references/phonegap-cli' ? "current" : "") PhoneGap CLI
                li: a(href="/references/desktop-app" class=document.url === 'references/desktop-app'? "current" : "") PhoneGap Desktop
                li: a(href="/references/developer-app" class=document.url === 'references/developer-app' ? "current" : "") PhoneGap Developer
                li: a(href="/references/browser-support" class=document.url === 'references/browser-support'? "current" : "") PhoneGap Browser Support
                    - var subPages = [{title:"Usage", url:"references/browser-support/usage/desktop"},{title:"Plugin Support", url:"references/browser-support/plugin-support"},{title:"Multi-Device Testing", url:"references/browser-support/multi-device"},{title:"Custom Plugins", url:"references/browser-support/custom-plugins"},{title:"Caution/Next Steps", url:"references/browser-support/caution-next-steps"}]
                    ul
                        each page in subPages
                            li: a(href="/#{page.url}" class=document.url === page.url ? "current" : "")!=page.title
                li: a(href="/plugin-apis" class=document.url === 'plugin-apis'? "current" : "") Plugin APIs
